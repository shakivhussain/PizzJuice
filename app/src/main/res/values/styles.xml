<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingBold_16">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/color_black_mid_night</item>
    </style>

    <style name="SubHeadingBold_16">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/color_gray_light</item>
    </style>

    <style name="SubHeadingBold_14">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/color_gray_light</item>
    </style>

    <style name="SubHeadingBold_12">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/color_gray_light</item>
    </style>

    <style name="RatingBarStyle"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/green</item>
    </style>

</resources>